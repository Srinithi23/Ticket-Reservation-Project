@model TicketReservation.Models.Login
@*@{

        Layout = null;
    }*@



<head>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>

@*@using (Html.BeginForm("SearchTrain", "SearchTrain", FormMethod.Post, new {  }))
{*@

    <body>
        <h1>Login</h1> 
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-3">
                    <div class="card bg-danger">
                        <div class="container">
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="EmailId" class="control-label font-weight-bold text-dark"></label>
                                    <input asp-for="EmailId" class="form-control" placeholder="Enter Registered EmailId" />
                                    <span asp-validation-for="EmailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label font-weight-bold text-dark"></label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Login" class="btn btn-default" id="submitButton" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-8"></div>
            </div>
        </div>
    </body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
